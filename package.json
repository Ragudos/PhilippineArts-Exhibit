{
  "name": "philippine-arts-exhibit",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "prod": "npm run build:server && npm run build",
    "build": "remix build",
    "build:server": "node esbuild.config.mjs",
    "dev": "remix dev --manual --command \"pnpm run dev:server\"",
    "dev:server": "node --inspect ./build/server.cjs",
    "start": "remix-serve ./build/index.js",
    "format": "prettier -w \"**/*.{ts,tsx,js,jsx,html,css}\"",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint --max-warnings 0 .",
    "typecheck": "tsc --noEmit",
    "routes": "remix routes"
  },
  "dependencies": {
    "@remix-run/css-bundle": "^2.1.0",
    "@remix-run/express": "^2.1.0",
    "@remix-run/node": "^2.1.0",
    "@remix-run/react": "^2.1.0",
    "chokidar": "^3.5.3",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fuzzy.js": "^0.1.0",
    "helmet": "^7.0.0",
    "imagesloaded": "^5.0.0",
    "isbot": "^3.6.8",
    "masonry-layout": "^4.2.2",
    "morgan": "^1.10.0",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "eslintIgnore": [
    "/build",
    "/node_modules"
  ],
  "devDependencies": {
    "@remix-run/dev": "^2.1.0",
    "@remix-run/eslint-config": "^2.1.0",
    "@types/compression": "^1.7.4",
    "@types/express": "^4.17.20",
    "@types/imagesloaded": "^4.1.4",
    "@types/masonry-layout": "^4.2.6",
    "@types/morgan": "^1.9.7",
    "@types/node": "^20.8.10",
    "@types/prop-types": "^15.7.9",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "autoprefixer": "^10.4.16",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "esbuild": "^0.19.5",
    "eslint": "^8.38.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "postcss": "^8.4.31",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.6",
    "tailwind-merge": "^2.0.0",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}